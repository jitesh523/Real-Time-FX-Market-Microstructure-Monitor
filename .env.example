# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TICKS=fx_ticks
KAFKA_TOPIC_TRADES=fx_trades
KAFKA_TOPIC_ORDERBOOK=fx_orderbook
KAFKA_CONSUMER_GROUP=fx_monitor

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=fx_market

# Application Configuration
LOG_LEVEL=INFO
CURRENCY_PAIRS=EUR/USD,GBP/USD,USD/JPY,AUD/USD
TICK_INTERVAL_MS=100

# Real Data API (optional)
ALPHAVANTAGE_API_KEY=your_api_key_here
USE_REAL_DATA=false

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=false

# Production Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Anomaly Detection
ZSCORE_THRESHOLD=3.0
QUOTE_STUFFING_THRESHOLD=100
WASH_TRADE_WINDOW_SECONDS=60
SPOOFING_DEPTH_THRESHOLD=5

# Dashboard Configuration
DASHBOARD_PORT=8501
REFRESH_INTERVAL_SECONDS=1
